{
  "name": "uxm",
  "version": "2.0.0-beta4",
  "description": "User experience metrics",
  "repository": "treosh/uxm",
  "bugs": "https://github.com/treosh/uxm/issues",
  "license": "MIT",
  "source": "src/index.js",
  "sideEffects": false,
  "types": "dist/index.d.js",
  "main": "dist/uxm.js",
  "module": "dist/uxm.module.js",
  "exports": {
    ".": {
      "browser": "./dist/uxm.module.js",
      "import": "./dist/uxm.module.js",
      "require": "./dist/uxm.js"
    },
    "./experimental": {
      "browser": "./experimental/dist/experimental.module.js",
      "import": "./experimental/dist/experimental.module.js",
      "require": "./experimental/dist/experimental.js"
    }
  },
  "files": [
    "dist",
    "src",
    "experimental"
  ],
  "keywords": [
    "web performance",
    "user experience",
    "user-centric metrics",
    "first paint",
    "first contentful paint",
    "largest contentful paint",
    "first input delay",
    "cumulative layout shift",
    "paint timing api",
    "user timing api",
    "network information api",
    "chrome user experience report",
    "crux",
    "network connection",
    "device memory"
  ],
  "scripts": {
    "build": "rm -rf dist && yarn build:core && yarn build:experimental",
    "build:core": "tsc --declaration --noEmit false --outDir dist --allowJs src/index.js && rm -r dist/*.js dist/utils/*.js && microbundle build --no-sourcemap --format=cjs,es",
    "build:experimental": "tsc --declaration --noEmit false --outDir experimental/dist --allowJs experimental/src/index.js && rm -r experimental/dist/**/*.js && microbundle build --cwd experimental --no-sourcemap --format=cjs,es",
    "test": "prettier -c src/** test/** && tsc -p . && yarn build && ava && size-limit"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "test/*.js"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.5",
    "@types/node": "12",
    "@types/puppeteer": "^2.0.1",
    "ava": "^3.6.0",
    "esm": "^3.2.25",
    "microbundle": "^0.12.0-next.8",
    "prettier": "^2.0.4",
    "puppeteer": "^2.1.1",
    "size-limit": "^4.4.5",
    "typescript": "^3.8.3"
  },
  "size-limit": [
    {
      "limit": "2.5KB",
      "path": "./dist/uxm.js"
    }
  ]
}
