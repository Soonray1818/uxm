{
  "name": "uxm",
  "version": "2.0.0-beta4",
  "description": "User experience metrics",
  "repository": "treosh/uxm",
  "bugs": "https://github.com/treosh/uxm/issues",
  "author": "Aleksey Kulikov <alekseykulikov@me.com>",
  "license": "MIT",
  "source": "src/index.js",
  "sideEffects": false,
  "main": "dist/uxm.js",
  "umd:main": "dist/uxm.umd.js",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "browser": "./src/index.js",
      "import": "./src/index.js",
      "umd": "./dist/uxm.umd.js",
      "require": "./dist/uxm.js"
    }
  },
  "files": [
    "dist",
    "src",
    "types"
  ],
  "keywords": [
    "web performance",
    "user experience",
    "user-centric metrics",
    "first paint",
    "first contentful paint",
    "largest contentful paint",
    "first input delay",
    "cumulative layout shift",
    "paint timing api",
    "user timing api",
    "network information api",
    "chrome user experience report",
    "crux",
    "network connection",
    "device memory"
  ],
  "scripts": {
    "build": "rm -rf dist && microbundle build --no-sourcemap --format=cjs,umd && yarn build:declarations",
    "build:declarations": "rm -rf types && tsc --declaration --noEmit false --outDir dist -p . && rm -rf dist/test && rm -r dist/src/*.js dist/src/**/*.js && mv dist/src types",
    "test": "prettier -c src/** test/** && tsc -p . && rollup -c test/rollup.js && ava && yarn build && size-limit"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "test/*.js",
      "!test/rollup.js"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.5",
    "@types/node": "12",
    "@types/puppeteer": "^2.0.1",
    "ava": "^3.6.0",
    "esm": "^3.2.25",
    "microbundle": "^0.12.0-next.8",
    "prettier": "^2.0.4",
    "puppeteer": "^2.1.1",
    "rollup": "^2.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "size-limit": "^4.4.5",
    "typescript": "^3.8.3"
  },
  "size-limit": [
    {
      "path": "./dist/uxm.js",
      "webpack": false,
      "limit": "2.5KB"
    }
  ]
}
