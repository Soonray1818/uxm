{
  "name": "uxm",
  "version": "1.1.0",
  "description": "User experience metrics",
  "repository": "treosh/uxm",
  "author": "Aleksey Kulikov <alekseykulikov@me.com>",
  "license": "MIT",
  "source": "src/index.js",
  "main": "dist/uxm.js",
  "module": "dist/uxm.es.js",
  "unpkg": "dist/uxm.umd.js",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "Web Performance",
    "Perceived Web Performance",
    "User Experience",
    "First Paint",
    "First Contentful Paint",
    "Largest Contentful Paint",
    "First Input Delay",
    "Paint Timing API",
    "Network Information API",
    "Chrome User Experience Report",
    "Connection Type",
    "PerformancePaintTiming",
    "deviceMemory"
  ],
  "scripts": {
    "build": "rm -rf dist && microbundle --no-sourcemap --no-compress",
    "test": "prettier -c src/** package.json README.md && tsc -p . && yarn build && ava test/*.js"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "devDependencies": {
    "@types/node": "10",
    "@types/puppeteer": "^1.19.1",
    "ava": "^2.3.0",
    "esm": "^3.2.25",
    "microbundle": "^0.11.0",
    "prettier": "^1.18.2",
    "puppeteer": "^1.19.0",
    "typescript": "^3.6.2"
  }
}
