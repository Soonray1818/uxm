{
  "name": "uxm",
  "version": "2.0.0-beta3",
  "description": "User experience metrics",
  "repository": "treosh/uxm",
  "author": "Aleksey Kulikov <alekseykulikov@me.com>",
  "license": "MIT",
  "source": "src/index.js",
  "main": "dist/uxm.js",
  "umd:main": "dist/uxm.umd.js",
  "module": "dist/uxm.es.js",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "Web Performance",
    "Perceived Web Performance",
    "User Experience",
    "First Paint",
    "First Contentful Paint",
    "Largest Contentful Paint",
    "First Input Delay",
    "Paint Timing API",
    "Network Information API",
    "Chrome User Experience Report",
    "Connection Type",
    "PerformancePaintTiming",
    "deviceMemory"
  ],
  "scripts": {
    "build": "rm -rf dist && microbundle build --no-sourcemap && yarn build:bundle && yarn build:declaration",
    "build:bundle": "rollup -c test/rollup.js",
    "build:declaration": "tsc --declaration --noEmit false --outDir dist -p . && rm dist/index.js && mv dist/index.d.ts dist/uxm.d.ts",
    "test": "prettier -c src/** test/** && tsc -p . && yarn build && ava && size-limit"
  },
  "ava": {
    "require": [
      "esm"
    ],
    "files": [
      "test/*.js",
      "!test/rollup.js"
    ]
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.4.5",
    "@types/node": "12",
    "@types/puppeteer": "^2.0.1",
    "ava": "^3.5.2",
    "esm": "^3.2.25",
    "microbundle": "^0.11.0",
    "prettier": "^2.0.2",
    "puppeteer": "^2.1.1",
    "rollup": "^2.3.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "size-limit": "^4.4.5",
    "typescript": "^3.8.3"
  },
  "size-limit": [
    {
      "path": "./dist/uxm.js",
      "limit": "2KB"
    },
    {
      "path": "./dist/uxm.es.js",
      "limit": "2KB"
    }
  ]
}
