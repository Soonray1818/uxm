{
  "name": "uxm",
  "version": "2.0.0-beta3",
  "description": "A modular library for collecting front-end performance metrics",
  "repository": "treosh/uxm",
  "author": "Aleksey Kulikov <aleksey@treo.sh>",
  "license": "MIT",
  "source": "src/index.js",
  "types": "./dist/uxm.d.ts",
  "main": "dist/uxm.js",
  "module": "dist/uxm.es.js",
  "unpkg": "dist/uxm.umd.js",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "user experience metrics",
    "user-centric metrics",
    "web performance",
    "first contentful paint",
    "largest contentful paint",
    "first input delay",
    "cumulative layout shift",
    "paint timing",
    "long tasks",
    "performance observer",
    "element timing",
    "layout shifts",
    "user timing",
    "chrome user experience report",
    "crux",
    "network information",
    "connection type",
    "device memory"
  ],
  "scripts": {
    "build": "rm -rf dist && microbundle --no-sourcemap && yarn build:declaration",
    "build:bundle": "rollup -c test/rollup.js",
    "build:declaration": "tsc --declaration --noEmit false --outDir dist -p . && rm dist/index.js && mv dist/index.d.ts dist/uxm.d.ts",
    "test": "prettier -c src/** test/** && tsc -p . && yarn build:bundle && ava test/index.js && yarn build && size-limit"
  },
  "dependencies": {},
  "devDependencies": {
    "@size-limit/preset-small-lib": "^2.2.2",
    "@types/node": "12.12.16",
    "@types/puppeteer": "^2.0.0",
    "ava": "^2.4.0",
    "esm": "^3.2.25",
    "lodash-es": "^4.17.15",
    "microbundle": "^0.11.0",
    "prettier": "^1.19.1",
    "puppeteer": "^2.0.0",
    "rollup": "^1.27.9",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "typescript": "^3.7.3"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/uxm.js",
      "limit": "2.2KB"
    },
    {
      "path": "./dist/uxm.es.js",
      "limit": "2.2KB"
    },
    {
      "path": "./dist/uxm.umd.js",
      "limit": "2.2KB"
    }
  ]
}
